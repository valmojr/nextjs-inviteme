generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id          String   @id @unique @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  avatar      String?
  email       String?  @unique
  roles       Role[]
  ownedEvents Event[]
  houses      House[]
}

model Role {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  groupID   String
  group     Group    @relation(fields: [groupID], references: [id])
}

model Group {
  id            String   @id @unique @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String
  roleIDs       String[]
  roles         Role[]
  childGroups   Group[]  @relation("GroupToFatherGroup")
  fatherGroupID String?
  fatherGroup   Group?   @relation("GroupToFatherGroup", fields: [fatherGroupID], references: [id])
  Event         Event?
}

model Event {
  id          String    @id @unique @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  startDate   DateTime
  endDate     DateTime?
  name        String
  thumbnail   String?
  mainGroupID String    @unique
  mainGroup   Group     @relation(fields: [mainGroupID], references: [id])
  ownerID     String?
  owner       User?     @relation(fields: [ownerID], references: [id])
  location    String?
  description String?
  House       House[]
}

model House {
  id        String   @id @unique @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  avatar    String?
  users     User[]
  events    Event[]
}
